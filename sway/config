set $mod Mod4

set $wallpaper ~/.config/wallpaper

set $browser   chromium
set $launcher  fuzzel
set $term      alacritty

set $locker    swaylock
set $lockargs  -i $wallpaper --daemonize

bar {
  swaybar_command waybar
}

bindsym {
    $mod+Shift+r exec swaymsg reload
}

bindsym {
    $mod+Return exec $term
    $mod+Space  exec $launcher
    $mod+b      exec $browser
    $mod+f      fullscreen
    $mod+l      exec $locker $lockargs
    $mod+q      kill
}

bindsym {
    XF86AudioMute         exec pactl set-sink-mute @DEFAULT_SINK@ toggle

    XF86AudioLowerVolume  exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    XF86AudioRaiseVolume  exec pactl set-sink-volume @DEFAULT_SINK@ +5%

    XF86AudioPrev         exec playerctl previous
    XF86AudioPlay         exec playerctl play-pause
    XF86AudioNext         exec playerctl next

    XF86MonBrightnessDown exec brightnessctl set 5%-
    XF86MonBrightnessUp   exec brightnessctl set 5%+

    XF86PowerOff          exec $locker $lockargs
}

bindsym {
    $mod+1 workspace 1
    $mod+2 workspace 2
    $mod+3 workspace 3
    $mod+4 workspace 4
    $mod+5 workspace 5

    $mod+Shift+1 move workspace 1
    $mod+Shift+2 move workspace 2
    $mod+Shift+3 move workspace 3
    $mod+Shift+4 move workspace 4
    $mod+Shift+5 move workspace 5
}

bindsym {
    $mod+Down  move down
    $mod+Left  move left
    $mod+Right move right
    $mod+Up    move up
}

font pango:Noto Color Emoji 8
font pango:CommitMonoNerdFont 10

for_window [app_id="Alacritty"] opacity 0.9

default_border none
hide_edge_borders both

output "*" bg $wallpaper fill

workspace 1 output "DP-2" "DP-3" "eDP-1"
workspace 2 output "DP-2" "DP-3" "eDP-1"
workspace 3 output "DP-2" "DP-3" "eDP-1"
workspace 4 output "DP-2" "DP-3" "eDP-1"
workspace 5 output "DP-2" "DP-3" "eDP-1"

bindswitch --locked lid:toggle exec $locker $lockargs && systemctl sleep

exec gammastep

exec swayidle -w timeout 30  'if pgrep $locker; then sudo systemctl sleep; fi'
